{
    "title": "Guinness World Records Scraper",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "searchTerm": {
            "title": "Search Term",
            "type": "string",
            "description": "The term to search for on Guinness World Records.",
            "default": "record"
        },
        "searchType": {
            "title": "Search Type",
            "type": "string",
            "description": "The type of results to search for.",
            "editor": "select",
            "default": "record",
            "enum": ["record", "newsarticle", "page"],
            "enumTitles": ["Record", "News Article", "Page"]
        },
        "maxItems": {
            "title": "Max Items",
            "type": "integer",
            "description": "Maximum number of items to scrape.",
            "editor": "number",
            "prefill": 40,
            "minimum": 1
        }
    },
    "required": ["searchTerm"]
}
